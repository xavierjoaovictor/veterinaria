@using Veterinaria.Models

@model List<Produto>
@{
    ViewBag.Title = "Listar Produtos";
}
<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@ViewBag.Title</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">         
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Descricao</th>
                        <th>Valor</th>
                        <th>Qtd.Estoque</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Produto objeto in Model)
        {
                        <tr>
                            <td> @objeto.IdProduto </td>
                            <td> @objeto.Nome </td>
                            <td> @objeto.Descricao </td>
                            <td> @objeto.Valor.ToString() </td>
                            <td> @objeto.Qtd_Estoque.ToString() </td>
                            <td>
                                <a href="@Url.Action("Details", "Produto")?id=@objeto.IdProduto" }" class="btn btn-info">
                                    <span class="fa fa-file-o" aria-hidden="true"></span>
                                </a>

                                <a href="@Url.Action("Edit", "Produto")?id=@objeto.IdProduto" }" class="btn btn-warning" placeholder="Editar">
                                    <span class="fa fa-edit" aria-hidden="true"></span>
                                </a>

                                <a href="@Url.Action("Delete", "Produto")?id=@objeto.IdProduto" }" class="btn btn-danger">
                                    <span class="fa fa-warning" aria-hidden="true"></span>
                                </a>
                            </td> 
                        </tr>
    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts {
@Styles.Render("~/Vendors/datatables.net-bs/css/dataTables.bootstrap.min.css")
@Styles.Render("~/Vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css")
@Styles.Render("~/Vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css")

@Scripts.Render("~/Vendors/datatables.net/js/jquery.dataTables.min.js")
@Scripts.Render("~/Vendors/datatables.net-bs/js/dataTables.bootstrap.min.js")
@Scripts.Render("~/Vendors/datatables.net-responsive/js/dataTables.responsive.min.js")
@Scripts.Render("~/Vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js")
@Scripts.Render("~/Vendors/datatables.net-scroller/js/datatables.scroller.min.js")

    <script>
        $(document).ready(function () {
            $('#datatable-responsive').DataTable();
        });
    </script>
}